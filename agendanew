    <canvas id="background-canvas"></canvas>
    <script>
        // Data agenda untuk setiap hari
        const jadwalSekolah = {
            Senin: [
                "ðŸ“š Matematika pukul 07:30 WIB",
                "ðŸ“– Bahasa Indonesia pukul 09:00 WIB",
                "ðŸ”¬ IPA pukul 10:30 WIB",
